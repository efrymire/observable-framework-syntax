{
  "name": "observable-framework-syntax",
  "displayName": "Observable Framework Syntax Highlighter",
  "description": "Syntax highlighting for Observable Framework files (.md with Observable syntax)",
  "version": "1.0.0",
  "publisher": "efrymire",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "observable",
    "framework",
    "markdown",
    "data visualization",
    "javascript",
    "reactive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/efrymire/observable-framework-syntax.git"
  },
  "bugs": {
    "url": "https://github.com/efrymire/observable-framework-syntax/issues"
  },
  "homepage": "https://github.com/efrymire/observable-framework-syntax#readme",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "text.html.markdown.observable",
        "path": "./syntaxes/observable-framework.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "configuration": {
      "title": "Observable Framework",
      "properties": {
        "observableFramework.enableSyntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting for Observable Framework files"
        },
        "observableFramework.highlightCodeFences": {
          "type": "boolean",
          "default": true,
          "description": "Enable enhanced highlighting for JavaScript code fences"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  }
}

{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["```", "```"],
    ["`", "`"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["`", "`"],
    ["\"", "\""],
    ["'", "'"],
    ["${", "}"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["`", "`"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#?region\\b.*-->",
      "end": "^\\s*<!--\\s*#?endregion\\b.*-->"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*((\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$|<!--\\s*#?region\\b.*-->)",
    "decreaseIndentPattern": "^\\s*(\\s*(\\}|\\)|\\])|<!--\\s*#?endregion\\b.*-->)"
  }
}